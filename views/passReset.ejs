<link
  rel="stylesheet"
  href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
/>
<link
  href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css"
  rel="stylesheet"
  id="bootstrap-css"
/>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<link href="css/main.css" rel="stylesheet" media="all" />
<link
  rel="stylesheet"
  href="https://unpkg.com/purecss@1.0.0/build/pure-min.css"
/>

<style>
  body {
    background-color: #0e0e11;
  }

  .contact {
    padding: 4%;
    height: 400px;
  }

  .col-md-3 {
    background: #232323;
    padding: 4%;
    border-top-left-radius: 0.5rem;
    border-bottom-left-radius: 0.5rem;
  }

  .contact-info {
    margin-top: 10%;
  }

  .contact-info img {
    margin-bottom: 15%;
  }

  .contact-info h2 {
    margin-bottom: 10%;
  }

  .col-md-9 {
    background: #fff;
    padding: 3%;
    border-top-right-radius: 0.5rem;
    border-bottom-right-radius: 0.5rem;
  }

  .contact-form label {
    font-weight: 600;
  }

  .contact-form button {
    background: #25274d;
    color: #fff;
    font-weight: 600;
    width: 25%;
  }

  .contact-form button:focus {
    box-shadow: none;
  }

  .link1:hover {
    background-color: #232323;
  }

  #foot {
    display: none;
  }
</style>

<body>
  <!-- Navigation -->
  <nav
    class="navbar navbar-expand-lg navbar-dark static-top"
    style="background-color: #0e0e11; width: 100%"
  >
    <div class="container">
      <a class="navbar-brand" href="#">
        <img
          src="../public/assets/Ecell-LOGO-01.png"
          style="max-height: 50px"
          alt=""
        />
      </a>

      <div class="nav-links">
        <a
          class="link1"
          style="color: white; padding: 10px; text-decoration: none"
          href="/"
          ><b>Home</b></a
        >
        <a
          class="link1"
          style="color: white; padding: 10px; text-decoration: none"
          href="/users/login"
          ><b>Login</b></a
        >
      </div>
    </div>
  </nav>

  <!-- Page Content -->
  <div class="container" style="padding-top: 80px">
    <div class="container contact" style="max-width: 1000px" id="form1">
      <div class="row">
        <div class="col-md-3">
          <div
            class="contact-info"
            style="text-align: center"
            style="color: white"
          >
            <h2 style="color: white">Forgot Password?</h2>
            <h4 style="color: white">No worries!</h4>
          </div>
        </div>

        <div class="col-md-9">
          <div class="contact-form">
            <form
              class="gform pure-form pure-form-stacked"
              method="POST"
              action="https://script.google.com/macros/s/AKfycby0hhuyF-cMgEf0z9hmfBQO_iDUbzYZMHcrs3zm/exec"
            >
              <div class="form-elements1">
                <div class="form-group">
                  <label class="control-label" for="fname">Leader Name:</label>
                  <div class="col-sm-10">
                    <input
                      type="text"
                      class="form-control"
                      id="fname"
                      placeholder="Enter Name"
                      name="fname"
                      required
                    />
                  </div>
                </div>
                <div class="form-group">
                  <label class="control-label" for="lname">College Name:</label>
                  <div class="col-sm-10">
                    <input
                      type="text"
                      class="form-control"
                      id="lname"
                      placeholder="Enter College Name"
                      name="lname"
                      required
                    />
                  </div>
                </div>
                <div class="form-group">
                  <label class="control-label" for="email">Email:</label>
                  <div class="col-sm-10">
                    <input
                      type="email"
                      class="form-control"
                      id="email"
                      placeholder="Enter email"
                      name="email"
                      required
                    />
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-offset-2 col-sm-10">
                    <button value="Click" type="submit" class="btn btn-default">
                      Submit
                    </button>
                  </div>
                </div>
              </div>

              <div class="thankyou_message" style="display: none">
                <div class="container" style="padding-top: 80px">
                  <div class="container contact" id="form2">
                    <div class="card" style="width: 100%">
                      <div class="card-body">
                        <h5 class="card-title">NOTE:</h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                          Password Reset Terms:
                        </h6>
                        <p class="card-text">
                          <b
                            >After verification of your email id we'll send you
                            an email(for password reset)! Stay tuned!</b
                          >
                        </p>
                        <p class="card-text"><b>It can take a few hours.</b></p>
                        <a
                          style="
                            padding: 10px;
                            background-color: #25274d;
                            color: white;
                          "
                          href="/users/login"
                          class="card-link"
                          ><b>LOGIN</b></a
                        >
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="js/global.js"></script>

  <!-- AJAX Contact Form Using -->
  <script src="js/app.js"></script>
  <script data-cfasync="false" src="js/form-submission-handler.js"></script>
  <!-- /.container -->
</body>
